{$R *.dfm}

function f(x:real):real;
begin
  //ShowMessage(floattostr(x));
  f:=power(arcsin(x),2);
end;

function ha(x1,x2:real):real;
begin
  ha:=x2-x1;
end;

function df(a,b:real):real;
var i,g:integer;
    h,hi:real;
begin
  //hi:=1/2;
  //h:=0.005;
  //df:=(f(b)-f(a))/(b-a);
  df:=(f(a+h)-f(a))/h;
  //df:=(1/(h()+))

end;

procedure TForm1.Button1Click(Sender: TObject);
var x,a,b,hi:real;
  i: Integer;
begin
  a:=-1/2;
  b:=1/2;

  for i := 1 to n do
    StringGrid1.Cells[0,0]:=floattostr();

  //x:=df(a,b);
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  n:=10;
  StringGrid1.Rowcount:=n+1;
  StringGrid1.Cells[0,0]:='Номер Х';
  StringGrid1.Cells[1,0]:='Приближенное значение производной';
  StringGrid1.Cells[2,0]:='Точный ответ';


end;

